<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		    
     <template id="external_layout_pos_reports">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
		<!-- ### force calling template ### -->
        <t t-call="zb_pos_reports.external_layout_standard_pos_reports"><t t-raw="0"/></t>
     </template>
	
	<template id="external_layout_standard_pos_reports">
		    <div class="header">
			<div class="col-12" style="padding-left: 40%;">
				<!-- <img t-if="company.header_image"  t-att-src="'data:image/png;base64,%s' %to_text(company.header_image)" style="max-height:140px;width:100%"/> -->
				<img t-if="company.header_image"  t-att-src="'data:image/png;base64,%s' %to_text(company.header_image)" style="max-height:140px;width:40%"/>
				</div>
			</div>

			<div class="article o_report_layout_standard">
				<t t-raw="0"/>
			</div>

			<div class="footer">
				<div class="row" style="padding-top:0.5cm;">
					<div class="col-12">
						<img t-if="company.footer_image"  t-att-src="'data:image/png;base64,%s' %to_text(company.footer_image)" style="max-height:140px;width:100%"/>
					</div>
				</div>
			</div>
	</template>


	<template id="inherit_standard_external_layout" inherit_id="web.external_layout_standard">
    <xpath expr="//div[contains(@t-attf-class, 'header o_company_#{company.id}_layout')]" position="replace">
      <div t-attf-class="header o_company_#{company.id}_layout">
        <div class="row" >
          <div class="col-12" style="padding-left: 40%;">
            <img t-if="company.header_image" t-att-src="image_data_uri(company.header_image)" style="max-height:170px;width:40%"  alt="Header"/>
          </div>
        </div>
      </div>
    </xpath>


    <xpath expr="//div[contains(@t-attf-class, 'footer o_standard_footer o_company_#{company.id}_layout')]" position="replace">
      <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
        <div class="row">
          <div class="col-12" style="padding:0 !important;">
            <img t-if="company.footer_image" t-att-src="image_data_uri(company.footer_image)" style="width:100%;"/>
          </div>
        </div>
      </div>
    </xpath>
  </template>



	</data>
</odoo>