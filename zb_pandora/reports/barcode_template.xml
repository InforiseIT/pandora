<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="zb_pandora.barcode_report">
            <div t-call="web.html_container">
                <div class="page">
                    <style type="text/css">
                        .barcode_class { display: block; width: 22px; height: 1px; }
                    </style>
                    <t t-foreach="product_obj" t-as="ele">
                            <div>
                                <div style="width: 50%; float:left;font-size:6px;">
                                     <span t-if="ele['barcode']">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', ele['barcode'], 00, 00)" style="width:50%;height:8px"/>
                                        </span><br/>
                                    <span t-esc="ele['default_code']"/><br/>
                                    <span t-esc="ele['list_price']"/>
                                    <span t-esc="ele['currency_id']"/>
                                </div>
                                  <div style="width: 50%; float:right;font-size:6px;">
                                      <span t-esc="ele['name']"/><br/>
                                      <span t-esc="ele['x_studio_net_weight_1']"/>
                                  </div>
                            </div>


                    </t>
                </div>
            </div>

        </template>
    </data>
</odoo>
