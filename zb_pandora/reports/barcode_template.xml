<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="zb_pandora.barcode_report">
            <div t-call="web.html_container">
                <div class="page">

                    <t t-foreach="product_obj" t-as="ele">
                            <div>
                                <div style="width: 50%; float:left;font-size:6px;">
                                    <t t-if="ele['barcode']">
                                        <span t-esc="ele['barcode']" t-options="{'widget': 'barcode', 'img_align': 'center','symbology': 'EAN13','width': 600, 'height': 100, 'img_style': 'width:12mm;height:5px;'}"/><br></br>
                                    </t>
                                    <t t-else="">
                                        <span style="visibility:hidden;">zzzz</span>
                                    </t>
                                    <t t-if="ele['default_code']">
                                        <span t-esc="ele['default_code']"/><br/>
                                    </t>
                                     <t t-else="">
                                        <span style="visibility:hidden;">zzzz</span>
                                    </t>
                                    <t t-if="ele['list_price']">
                                        <span t-esc="ele['list_price']"/>
                                    </t>
                                     <t t-else="">
                                        <span style="visibility:hidden;">zzzz</span>
                                    </t>
                                     <t t-if="ele['currency_id']">
                                        <span t-esc="ele['currency_id']"/>
                                    </t>
                                     <t t-else="">
                                        <span style="visibility:hidden;">zzzz</span>
                                    </t>
                                </div>
                                  <div style="width: 50%; float:right;font-size:6px;">

                                        <t t-if="ele['name']">
                                            <span t-esc="ele['name']"/><br/>
                                        </t>
                                         <t t-else="">
                                            <span style="visibility:hidden;">zzzz</span>
                                        </t>
                                      <t t-if="ele['x_studio_net_weight_1']">
                                            <span t-esc="ele['x_studio_net_weight_1']"/>
                                        </t>
                                         <t t-else="">
                                             <span style="visibility:hidden;">zzzz</span>
                                        </t>
                                  </div>
                            </div>


                    </t>
                </div>
            </div>

        </template>
    </data>
</odoo>
